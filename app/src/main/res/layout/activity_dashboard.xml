<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DashboardActivity"
    android:id="@+id/linearLayoutDashBoard"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/DashboardToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:menu="@menu/menu"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/round_activity"
        android:gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amaranth"
        android:text="Dashboard"
        android:textColor="#1A202E"
        android:textSize="35sp"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:paddingLeft="10dp" android:paddingRight="10dp"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OTPTextView1"
        android:layout_marginBottom="25dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/amaranth"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Welcome to the Dashboard."
        android:textColor="#1A202E"
        android:textSize="15sp"
        android:textStyle="normal"/>

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="300dp"
            android:layout_height="200dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="15dp">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/illu4"
                android:layout_marginBottom="25dp"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
        android:id="@+id/CardLinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
            android:elevation="12dp"
        android:paddingRight="10dp"
        android:background="@drawable/rounded_tab_accesslog"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_marginLeft="10dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/profilesettings"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/Access_Log_AppRunTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/amaranth"
                android:text="Profile Settings"
                android:textColor="#414237"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
</LinearLayout>